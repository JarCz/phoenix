{
    "env": {
        "browser": true,
        "es6": true,
        "amd": true
    },
    "extends": [
        "standard",
        "plugin:vue/essential"
        ],
    "parserOptions": {
        "parser": "babel-eslint",
        "sourceType": "module"
    },
    "rules": {
      "require-await": "warn",
      "vue/order-in-components": "error",
      "standard/no-callback-literal": 0
    },
    "globals": {
      "require": false,
      "requirejs": false
    }
}
